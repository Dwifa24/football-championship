<%- include('../header') %>
<div class="container my-2">  
<div><a href="/leagues/create" class="btn btn-lg btn-primary">+ Add League</a></div><br>
<div class="container my-2"> 
  <div class="row row-1 row-cols-md-4">
        <% leagues.forEach(league => { %>
          
          <button type="button" class="btn btn-outline-success">
            <a href="/leagues/club/<%= league.id %>" class="link-dark">
            <div class="col">
              <div class="card ">
                <img src="<%= league.image %>" class="card-img-top" alt=" ">
                <div class="card-body text-success">
                  <h5 class="card-title"><%= league.name %></h5>

                  <a href="/leagues/update/<%= league.id %>" class="btn btn-primary">Edit league</a>
                  <a href="/leagues/delete/<%= league.id %>" class="btn btn-primary">Delete league</a>
                </div>
              </div>
          </div>
        </a>
          </button>
      <% }) %>
  </div>
  </div>
  </div>
<%- include('../footer') %>