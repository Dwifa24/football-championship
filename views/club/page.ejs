<%- include('../header') %>
<div class="container my-2">  
<div><a href="/clubs/create" class="btn btn-lg btn-primary">+ Add club</a></div><br>
<div class="container my-2"> 
  <div class="row row-cols-md-4">
        <% clubs.forEach(club => { %>
          
          <button type="button" class="btn btn-outline-success">
            <a href="/clubs/league/<%= club.id %>" class="link-dark">
            <div class="col">
              <div class="card ">
                <img src="<%= club.image %>" class="card-img-top" alt=" ">
                <div class="card-body text-success">
                  <h5 class="card-title"><%= club.name %></h5>

                  <a href="/clubs/update/<%= club.id %>" class="btn btn-primary">Edit club</a>
                  <a href="/clubs/delete/<%= club.id %>" class="btn btn-primary">Delete club</a>
                </div>
              </div>
          </div>
        </a>
          </button>
      <% }) %>
  </div>
  </div>
  </div>
<%- include('../footer') %>