<%- include('../header') %>
<div class="container my-2"> 
<h3>Create player</h3>
    <form method="post" action="/players/create">
    <div class="row mb-3">
      <label for="" class="col-sm-2 col-form-label">Back Number</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name"  name="back_number">
      </div>
    </div>
    <div class="row mb-3">
      <label for="" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name">
      </div>
    </div>
    <div class="row mb-3">
        <label for="" class="col-sm-2 col-form-label">Nationality</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="nationality" name="nationality">
        </div>
      </div>
      <div class="row mb-3">
        <label for="" class="col-sm-2 col-form-label">Position</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="position" name="position">
        </div>
      </div>
      <div class="row mb-3">
        <label for="" class="col-sm-2 col-form-label">Born</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="born" name="born">
        </div>
      </div>
      <div class="row mb-3">
        <label for="" class="col-sm-2 col-form-label">Height</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="height" name="height">
        </div>
      </div>
      <div class="row mb-3">
        <label for="" class="col-sm-2 col-form-label">Club Id</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="clubId" name="clubId">
        </div>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  </div>
<%- include('../footer') %>